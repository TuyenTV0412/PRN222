@{
    ViewData["Title"] = "Cài Đặt Khác";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap 5 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">



    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/elegant-icons.css" rel="stylesheet" />
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/css/nice-select.css" rel="stylesheet" />
    <link href="~/css/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/slicknav.min.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <style>
        .settings-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-top: 50px;
        }

            .settings-container h3 {
                margin-bottom: 30px;
            }

        .btn-settings {
            width: 250px;
            margin-bottom: 15px;
            font-size: 18px;
        }
    </style>
</head>
<body>

    <!-- Hero Section Begin -->
    <section class="hero">
        <div class="container">
            <div class="row">
                <!-- Sidebar -->
                <div class="col-lg-3">
                    <div class="hero__categories">
                        <div class="hero__categories__all">
                            <i class="fa fa-bars"></i>
                            <span>Quản lý</span>
                        </div>
                        <ul>
                            <li><a href="@Url.Action("GetAllUser", "Admin")">Quản Lý Người Dùng</a></li>
                            <li><a href="@Url.Action("ManageBooks", "Admin")">Quản Lý Sách</a></li>
                            <li><a href="@Url.Action("ManageBorrow", "Borrow")">Quản Lý Phiếu Mượn</a></li>
                            <li><a href="@Url.Action("Statistics", "Admin")">Thống Kê</a></li>
                            <li><a href="@Url.Action("OtherSettings", "Admin")">Khác</a></li>
                            <li><a href="@Url.Action("Logout", "Login")">Đăng xuất</a></li>
                        </ul>
                    </div>
                </div>

                <!-- Main Content -->
                <div class="col-lg-9">
                    <h3><strong>Cài Đặt Khác</strong></h3>
                    <div class="settings-container">
                       

                        <!-- Quản lý tác giả -->
                        <a href="@Url.Action("GetAllAuthor", "Admin")" class="btn btn-primary btn-settings">Quản Lý Tác Giả</a>

                        <!-- Quản lý thể loại -->
                        <a href="@Url.Action("ManageCategories", "Admin")" class="btn btn-success btn-settings">Quản Lý Thể Loại</a>

                        <!-- Quản lý nhà xuất bản -->
                        <a href="@Url.Action("ManagePublishers", "Admin")" class="btn btn-info btn-settings">Quản Lý Nhà Xuất Bản</a>

                        <!-- Back Button -->
                        
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
