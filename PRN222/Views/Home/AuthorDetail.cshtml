@model PRN222.Models.Author

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chi Tiết Tác Giả</title>

    <!-- Bootstrap 5 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/elegant-icons.css" rel="stylesheet" />
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/css/nice-select.css" rel="stylesheet" />
    <link href="~/css/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/slicknav.min.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />

</head>
<body>

    <!-- Hero Section Begin -->
    <section class="hero">
        <div class="container">
            <div class="row">
                <!-- Sidebar -->
                <div class="col-lg-3">
                    <div class="hero__categories">
                        <div class="hero__categories__all">
                            <i class="fa fa-bars"></i>
                            <span>Danh mục</span>
                        </div>
                        <ul>
                            <li><a href="@Url.Action("Index", "Home")"><strong>All</strong></a></li>
                            @foreach (var author in ViewBag.Authors)
                            {
                                <li><a href="@Url.Action("AuthorDetail", "Author", new { id = author.AuthorId })">@author.AuthorName</a></li>
                            }
                        </ul>
                    </div>
                </div>

                <!-- Main Content -->
                <div class="col-lg-9">
                    <h3><strong>Chi Tiết Tác Giả</strong></h3>
                    <div class="row">
                        <div class="col-lg-3">
                            <img src="@Url.Content("~/img/Author/" +Model.Image)" alt="Tác giả" style="max-width: 100%; height: auto; border-radius: 10px;">
                        </div>
                        <div class="col-lg-9">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">@Model.AuthorName</h5>
                                    <p class="card-text">
                                        <strong>ID:</strong> @Model.AuthorId<br />
                                        <strong>Tên tác giả:</strong> @Model.AuthorName<br />
                                        <strong>Quê quán:</strong> @Model.Hometown<br />
                                        <strong>Năm sinh:</strong> @Model.DateOfBirth?.ToString("dd/MM/yyyy")<br />
                                        @if (Model.DateOfDeath.HasValue)
                                        {
                                            <strong>Năm mất:</strong> @Model.DateOfDeath?.ToString("dd/MM/yyyy")

                                            <br />
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>

    <section class="from-blog spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title from-blog__title">
                        <h2>Danh Sách</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                @foreach (var book in Model.Books)
                {
                    if (!string.IsNullOrEmpty(book.Images))
                    {
                        <div class="col-lg-3 col-md-4 col-sm-6 mix">
                            <div class="featured__item">
                                <div class="featured__item__pic">
                                    <img src="@Url.Content("~/img/Book/" + book.Images)" alt="@book.BookName" style="width: 100%; height: auto; border-radius: 10px;">
                                    <ul class="featured__item__pic__hover">
                                        <li><a href="@Url.Action("Index", "BookDetail", new { id = book.BookId})"><i class="fa fa-retweet"></i></a></li>
                                        <li><a href="@Url.Action("Borrow", "BookDetail", new { bookID = book.BookId })"><i class="fa fa-shopping-cart"></i></a></li>
                                    </ul>
                                </div>
                                <div class="featured__item__text">
                                    <h6><a href="#">@book.BookName</a></h6> <!-- Tên sách -->
                                    <p>by @book.Author.AuthorName</p> <!-- Tên tác giả -->
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </section>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/jquery-3.3.1.min.js"></script>
    <script src="~/js/jquery-ui.min.js"></script>
    <script src="~/js/jquery.nice-select.min.js"></script>
    <script src="~/js/jquery.slicknav.js"></script>
    <script src="~/js/main.js"></script>
    <script src="~/js/mixitup.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/site.js"></script>

</body>
</html>
