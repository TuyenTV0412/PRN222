    </section>

    <section class="from-blog spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title from-blog__title">
                        <h2>Danh Sách Tác Giả</h2> <!-- Tiêu đề hiển thị -->
                    </div>
                </div>
            </div>
            <div class="row">
                @foreach (var au in Model)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <div class="featured__item">
                            <div class="featured__item__pic">
                                <img src="@Url.Content("~/img/Author/" + au.Image)" alt="@au.AuthorName" style="width: 100%; height: auto; border-radius: 10px;">
                                <ul class="featured__item__pic__hover">
                                    <li><a href="@Url.Action("AuthorDetail", "Author", new { id = @au.AuthorId})"><i class="fa fa-retweet"></i></a></li>
                                </ul>
                            </div>
                            <div class="featured__item__text">
                                <h6><a href="#">@au.AuthorName</a></h6>
                                <p>Hometown: @au.Hometown</p>
                            </div>
                        </div>
                    </div>
                }
                <div class="clearfix">
                    <ul class="pagination">
                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="@(i == ViewBag.CurrentPage ? "active" : "")">
                                <a href="@Url.Action("Author", "Home", new { page = i })">@i</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>

           

       

    </section>
