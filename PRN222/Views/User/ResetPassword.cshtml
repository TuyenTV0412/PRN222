@model PRN222.ViewModel.ResetPasswordViewModel
@{
    ViewData["Title"] = "Đặt Lại Mật Khẩu";
}
<style>
    /* Căn giữa toàn bộ nội dung */
    .reset-password-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 80vh; /* Đảm bảo form nằm giữa trang */
    }

    /* Định dạng form */
    .reset-password-form {
        width: 400px;
        padding: 20px;
        background: white;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        text-align: center;
    }

    /* Căn giữa tiêu đề */
    .reset-password-title {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 20px;
        text-align: center;
    }

    /* Định dạng input */
    .reset-password-form label {
        display: block;
        text-align: left;
        font-weight: bold;
        margin-bottom: 5px;
    }

    .reset-password-form input {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        margin-bottom: 10px;
    }

    /* Nút đặt lại mật khẩu */
    .reset-password-form button {
        width: 100%;
        padding: 10px;
        background-color: #dc3545; /* Màu đỏ */
        color: white;
        font-size: 16px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: 0.3s;
        margin-top: 10px;
    }

        .reset-password-form button:hover {
            background-color: #a71d2a;
        }

    /* Thông báo lỗi */
    .reset-password-error {
        color: red;
        text-align: center;
        font-weight: bold;
    }
</style>
<div class="reset-password-container">
    <h2 class="reset-password-title">Đặt Lại Mật Khẩu</h2>
    <form method="post" class="reset-password-form">
        <label>Email:</label>
        <input asp-for="Email" class="form-control" required />
        <label>Mật khẩu mới:</label>
        <input asp-for="NewPassword" type="password" class="form-control" required />
        <button type="submit">Đặt Lại</button>
    </form>
    <p class="reset-password-error">@ViewBag.Error</p>
</div>

