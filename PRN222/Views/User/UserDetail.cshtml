@model PRN222.Models.User
@{
    ViewData["Title"] = "Chi Tiết Người Dùng";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap 5 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">


    <link rel="stylesheet" href="css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="css/elegant-icons.css" type="text/css">
    <link rel="stylesheet" href="css/nice-select.css" type="text/css">
    <link rel="stylesheet" href="css/jquery-ui.min.css" type="text/css">
    <link rel="stylesheet" href="css/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="css/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="css/style.css" type="text/css">

    <!-- Custom CSS -->
    <style>
        .form-container {
            display: flex;
            align-items: center;
        }

        .form-container label {
            margin-right: 10px;
        }

        .form-container .form-group {
            margin-right: 10px;
        }
    </style>
</head>
<body>

    <!-- Hero Section Begin -->
    <section class="hero">
        <div class="container">
            <div class="row">
                <!-- Sidebar -->
                <div class="col-lg-3">
                    <div class="hero__categories">
                        <div class="hero__categories__all">
                            <i class="fa fa-bars"></i>
                            <span>Quản lý</span>
                        </div>
                        <ul>
                            <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                            <li><a href="@Url.Action("GetAllUser", "Admin")">Quản Lý Người Dùng</a></li>
                            <li><a href="@Url.Action("ManageBooks", "Admin")">Quản Lý Sách</a></li>
                            <li><a href="@Url.Action("ManageBorrows", "Admin")">Quản Lý Phiếu Mượn</a></li>
                            <li><a href="@Url.Action("Statistics", "Admin")">Thống Kê</a></li>
                            <li><a href="@Url.Action("Logout", "User")">Đăng xuất</a></li>
                        </ul>
                    </div>
                </div>

                <!-- Main Content -->
                <div class="col-lg-9">
                    <h3><strong>Thông tin người dùng</strong></h3> 
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Thông Tin</th>
                                <th>Giá Trị</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Tài khoản</td>
                                <td>@Model.Username</td>
                            </tr>
                            <tr>
                                <td>Tên</td>
                                <td>@Model.Name</td>
                            </tr>
                            <tr>
                                <td>Giới tính</td>
                                <td>@Model.Gender</td>
                            </tr>
                            <tr>
                                <td>Ngày sinh</td>
                                <td>@Model.DateOfBirth?.ToString("dd/MM/yyyy")</td>
                            </tr>
                            <tr>
                                <td>Địa chỉ</td>
                                <td>@Model.Address</td>
                            </tr>
                            <tr>
                                <td>Email</td>
                                <td>@Model.Email</td>
                            </tr>
                            <tr>
                                <td>Số điện thoại</td>
                                <td>@Model.Phone</td>
                            </tr>
                            <tr>
                                <td>Vai trò</td>
                                <td>@Model.Role.RoleName</td>
                            </tr>
                        </tbody>
                    </table>

                    <!-- Form thay đổi vai trò -->
                    <form asp-action="UpdateUserRole" asp-controller="Admin" method="post">
                        @Html.HiddenFor(model => model.PersonId)
                        <label>Vai trò:</label>
                        <select asp-for="RoleId" class="form-select" asp-items="@(new SelectList(ViewBag.Roles, "RoleId", "RoleName", Model.RoleId))"></select>
                        <input type="submit" value="Thay đổi" class="btn btn-primary" />
                    </form> 


                    <!-- Back Button -->
                    <div style="float: right; margin-top: 10px;">
                        <a href="@Url.Action("GetAllUser", "Admin")" class="btn btn-secondary">Quay lại</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
