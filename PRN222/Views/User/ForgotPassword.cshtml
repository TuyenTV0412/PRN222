@model PRN222.ViewModel.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Quên Mật Khẩu";
}
<style>
    /* Căn giữa toàn bộ nội dung */
    .forgot-password-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 80vh;
    }

    /* Định dạng form */
    .forgot-password-form {
        width: 400px;
        padding: 20px;
        background: white;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        text-align: center;
    }

    /* Căn giữa tiêu đề */
    .forgot-password-title {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 20px;
        text-align: center;
    }

    /* Định dạng input */
    .forgot-password-form label {
        display: block;
        text-align: left;
        font-weight: bold;
        margin-bottom: 5px;
    }

    .forgot-password-form input {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        margin-bottom: 10px;
    }

    /* Button nhóm */
    .forgot-password-buttons {
        display: flex;
        justify-content: space-between;
        gap: 10px;
        margin-top: 15px;
    }

    /* Nút gửi OTP */
    .btn-primary {
        width: 48%;
        padding: 10px;
        background-color: #007bff;
        color: white;
        font-size: 16px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: 0.3s;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    /* Nút hủy */
    .btn-secondary {
        width: 48%;
        padding: 10px;
        background-color: #dc3545;
        color: white;
        font-size: 16px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        transition: 0.3s;
    }

        .btn-secondary:hover {
            background-color: #a71d2a;
        }

    /* Thông báo lỗi */
    .forgot-password-error {
        color: red;
        text-align: center;
        font-weight: bold;
    }
</style>



<<div class="forgot-password-container">
    <h2 class="forgot-password-title">Quên Mật Khẩu</h2>
    <form method="post" class="forgot-password-form">
        <label>Email của bạn:</label>
        <input asp-for="Email" class="form-control" required />

        <div class="forgot-password-buttons">
            <button type="submit" class="btn-primary">Gửi Mã OTP</button>
            <a href="/login" class="btn-secondary">Hủy</a>
        </div>
    </form>
    <p class="forgot-password-error">@ViewBag.Error</p>
</div>



