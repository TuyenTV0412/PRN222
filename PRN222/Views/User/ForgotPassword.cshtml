@model PRN222.ViewModel.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Quên Mật Khẩu";
}

<h2>Quên Mật Khẩu</h2>
<form method="post">
    <label>Email của bạn:</label>
    <input asp-for="Email" class="form-control" required />
    <button type="submit" class="btn btn-primary mt-2">Gửi Mã OTP</button>
</form>
<p style="color: red;">@ViewBag.Error</p>
